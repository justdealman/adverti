<?php
/**
 * Template for filter items block
 *
 * @see Mage_Catalog_Block_Layer_Filter
 */
?>

<?php $counter = 0;?>
<?php $items = $this->getItems();?>
<?php if ($items[0]->getName()!='cat'):?>
    <?php foreach ($items as $_item): ?>
        <div class="checkbox js-checkbox-block">
            <input
                name="<?php echo $_item->getName();?>"
                value="<?php echo $_item->getValue() ?>"
                type="checkbox"
                class="checkbox__item js-filter-checkbox"
                id="filt_<?php echo $_item->getName();?><?php echo $_item->getValue() ?>"
                data-counter="<?php echo $counter ?>"
                <?php echo $_item->getState();?>
            />
            <label for="filt_<?php echo $_item->getName();?><?php echo $_item->getValue() ?>" class="checkbox__label">
                <?php echo $_item->getLabel() ?>
            </label>
        </div>
        <?php $counter++?>
    <?php endforeach ?>

    <div class="show-all-options js-show-all-options"><a>Показать все</a></div>
    <div class="show-all-options js-hide-all-options"><a>Свернуть</a></div>
<?php else:?>
    <ul>
        <?php foreach ($this->getItems() as $_item): ?>
            <li><a href="javascript:void(0);" data-cat="<?php echo $_item->getValue() ?>" class="js-filt-cat"><?php echo $_item->getLabel() ?></a></li>
        <?php endforeach ?>
    </ul>
<?php endif;?>

